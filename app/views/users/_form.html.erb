
<%= form_for @user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>

  <%= f.label :full_name %>
  <%= f.text_field :full_name %>
  <br>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>

  <%= f.label :instagram %>
  <%= f.text_field :instagram %>
  <br>

  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <br>

  <%= f.label :website %>
  <%= f.text_field :website %>
  <br>

  <%= f.submit %>

<% end %>
