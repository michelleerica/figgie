<!DOCTYPE html>
<html>
  <head>
    <title>Figgie</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <h1>Figgie</h1>
      <% unless @current_user.present?%>
        <%=link_to 'Login', login_path %> | <%=link_to 'Sign up', new_user_path%>
      <%else%>
        Welcome, <%=link_to @current_user.full_name, user_path(@current_user)%> |
      <%= link_to 'Logout', login_path, method: :delete%>
      <%end%>
    </nav>

    <%= yield %>
  </body>
</html>
